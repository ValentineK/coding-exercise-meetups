h1.center-text Meetups client
= form_with url: search_path, method: :get, local: true, skip_enforcing_utf8: true do |form|
  = form.text_field :query, value: @search_text, class: 'query-input'
  = form.submit 'Search', name: nil

.search-results
  - if @groups.present?
    .row.groups-list
      - @groups.each do |group|
        = render partial: 'groups/index/group', locals: { group: group }

    .events[style='display: none;']
      = render partial: 'groups/index/events'
